<tr id="<%= dom_id(task) %>">
  <td>
    <%= task.name %>
  </td>
  <td>
    <%= task.description %>
  </td>
  <td>
    <%= t task.state, scope: [:task, :state] %>

    <% if task.new? %>
      <%= link_to 'Start', start_task_path(task), method: :post, remote: true, class: 'btn btn-success btn-xs' %>
    <% elsif task.started? %>
      <%= link_to 'Finish', finish_task_path(task), method: :post, remote: true, class: 'btn btn-success btn-xs' %>
    <% end %>
  </td>
  <td>
    <%= l task.created_at %>
  </td>
  <td>
    <%= links_to_files(task) %>
  </td>
  <td>
    <%= link_to 'Edit', edit_task_path(task), remote: true, class: 'btn btn-primary btn-xs' %>
    <%= link_to 'Delete', task_path(task), method: :delete, remote: true, class: 'btn btn-danger btn-xs', data: { confirm: 'Are you sure?' } %>
  </td>
</tr>
