<%= simple_form_for task, html: { multipart: true }, authenticity_token: true, remote: true do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= file_field_tag 'attachment[]', multiple: true, class: 'form-control' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
