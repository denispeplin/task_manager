<div class="page-header">
  <h1>Tasks</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Task</th>
      <th>Description</th>
      <th>Status</th>
      <th>Created at</th>
      <th>User</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
    <tr>
      <td>
        <%= task.name %>
      </td>
      <td>
        <%= task.description %>
      </td>
      <td>
        <%= t task.state, scope: [:task, :state] %>
      </td>
      <td>
        <%= l task.created_at %>
      </td>
      <td>
        <%= task.user_email %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
